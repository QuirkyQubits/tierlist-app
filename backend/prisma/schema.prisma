generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int        @id @default(autoincrement())
  email      String     @unique
  password   String
  username   String?
  createdAt  DateTime   @default(now())
  tierLists  TierList[]
}

model TierList {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  visibility  String   @default("private")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userId      Int
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  tiers Tier[]
}

enum Visibility {
  PRIVATE
  PUBLIC
  UNLISTED
}

model Tier {
  id         Int        @id @default(autoincrement())
  name       String // e.g. "S", "A", "B", "C"
  color      String
  order      Int // determines row order
  tierList   TierList   @relation(fields: [tierListId], references: [id], onDelete: Cascade)
  tierListId Int
  items      TierItem[]
}

model TierItem {
  id          Int     @id @default(autoincrement())
  name        String
  imageUrl    String
  tier        Tier    @relation(fields: [tierId], references: [id], onDelete: Cascade)
  tierId      Int
}
